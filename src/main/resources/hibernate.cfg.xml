<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/tp_hibernate_db?createDatabaseIfNotExist=true</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">passw0rd</property>

        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.current_session_context_class">thread</property>

        <property name="hibernate.connection.pool_size">1</property>

        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <property name="hibernate.hbm2ddl.auto">update</property>

        <mapping resource="mappers/model/entities/Usuario.hbm.xml"/>
        <mapping resource="mappers/model/entities/Direccion.hbm.xml"/>
        <mapping resource="mappers/model/entities/Rol.hbm.xml"/>
        <mapping resource="mappers/model/entities/Ticket.hbm.xml"/>
        <mapping resource="mappers/model/entities/Categoria.hbm.xml"/>
        <mapping resource="mappers/model/entities/Etiqueta.hbm.xml"/>
        <mapping resource="mappers/model/entities/Comentario.hbm.xml"/>
    </session-factory>
</hibernate-configuration>