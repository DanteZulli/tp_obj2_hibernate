<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.grupo25.tp_obj2_hibernate.model.entities.Ticket" table="ticket">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="titulo" column="titulo" type="string"/>
        <property name="descripcion" column="descripcion" type="string"/>
        <property name="estado" column="estado" type="string"/>
        <property name="prioridad" column="prioridad" type="string"/>
        <property name="fechaCreacion" column="fecha_creacion" type="java.time.LocalDateTime"/>
        <property name="fechaResolucion" column="fecha_resolucion" type="java.time.LocalDateTime"/>
        
        <many-to-one name="creador" class="com.grupo25.tp_obj2_hibernate.model.entities.Usuario" column="creador_id"/>
        <many-to-one name="asignado" class="com.grupo25.tp_obj2_hibernate.model.entities.Usuario" column="asignado_id"/>
        <many-to-one name="categoria" class="com.grupo25.tp_obj2_hibernate.model.entities.Categoria" column="categoria_id"/>
        
        <bag name="etiquetas" table="ticket_etiqueta">
            <key column="ticket_id"/>
            <many-to-many class="com.grupo25.tp_obj2_hibernate.model.entities.Etiqueta" column="etiqueta_id"/>
        </bag>
        
        <bag name="comentarios" inverse="true">
            <key column="ticket_id"/>
            <one-to-many class="com.grupo25.tp_obj2_hibernate.model.entities.Comentario"/>
        </bag>
    </class>
</hibernate-mapping>