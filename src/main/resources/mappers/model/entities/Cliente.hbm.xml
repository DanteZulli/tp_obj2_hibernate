<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.grupo25.tp_obj2_hibernate.model.entities">
    <subclass name="Cliente" extends="Usuario" discriminator-value="CLIENTE" table="clientes">
        <key column="usuario_id"/>
        <property name="nroCliente" column="nro_cliente" type="int" unique="true"/>
        <property name="plan" column="plan" type="string"/>
        <property name="particular" column="particular" type="boolean"/>
        <one-to-one name="direccion" class="Direccion" cascade="all" foreign-key="direccion_id"/>
    </subclass>
</hibernate-mapping>