<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.grupo25.tp_obj2_hibernate.model.entities">
    <class name="Ticket" table="tickets">
        <id name="id" type="int">
            <generator class="identity"/>
        </id>
        <property name="titulo" column="titulo" type="string" not-null="true"/>
        <property name="descripcion" column="descripcion" type="text" not-null="true"/>
        <property name="estado" column="estado" type="string"/>
        <property name="prioridad" column="prioridad" type="string"/>
        <property name="fechaCreacion" column="fecha_creacion" type="timestamp" not-null="true"/>
        <property name="fechaResolucion" column="fecha_resolucion" type="timestamp"/>
        <many-to-one name="creador" column="creador_id" class="Usuario" not-null="true"/>
        <many-to-one name="asignado" column="asignado_id" class="Usuario"/>
        <many-to-one name="categoria" column="categoria_id" class="Categoria" not-null="true"/>
        <bag name="etiquetas" table="ticket_etiquetas" cascade="save-update">
            <key column="ticket_id"/>
            <many-to-many class="Etiqueta" column="etiqueta_id"/>
        </bag>
        <list name="comentarios" inverse="true" cascade="all, delete-orphan">
            <key column="ticket_id"/>
            <index column="comentario_orden"/>
            <one-to-many class="Comentario"/>
        </list>
    </class>
</hibernate-mapping>