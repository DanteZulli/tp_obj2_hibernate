<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.grupo25.tp_obj2_hibernate.model.entities.Comentario" table="comentario">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="mensaje" column="mensaje" type="string"/>
        <property name="fecha" column="fecha" type="java.time.LocalDateTime"/>
        
        <many-to-one name="ticket" class="com.grupo25.tp_obj2_hibernate.model.entities.Ticket" column="ticket_id"/>
        <many-to-one name="usuario" class="com.grupo25.tp_obj2_hibernate.model.entities.Usuario" column="usuario_id"/>
    </class>
</hibernate-mapping>